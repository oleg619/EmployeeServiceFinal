<div class="modal @_modalClass" tabindex="-1" role="dialog" style="display:@_modalDisplay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Employee details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tbody>
                        <tr>
                            <td>First name</td>
                            <td>@_employee?.FirstName</td>
                        </tr>
                        <tr>
                            <td>First name</td>
                            <td>@_employee?.LastName</td>
                        </tr>
                        <tr>
                            <td>Display name</td>
                            <td>@_employee?.DisplayName</td>
                        </tr>
                        <tr>
                            <td>Principal</td>
                            <td>
                                @* <span> *@
                                    @_employee?.UserPrincipalName
                                @* </span> *@
                            </td>
                        </tr>
                        <tr>
                            <td>Mail</td>
                            <td>@_employee?.Mail</td>
                        </tr>
                        <tr>
                            <td>Job title</td>
                            <td>@_employee?.JobTitle</td>
                        </tr>
                        <tr>
                            <td>Department</td>
                            <td>@_employee?.Department</td>
                        </tr>
                        <tr>
                            <td>Mobile phone</td>
                            <td>@_employee?.MobilePhone</td>
                        </tr>
                        <tr>
                            <td>Office phone</td>
                            <td>@_employee?.OfficePhone</td>
                        </tr>

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="Close">Close</button>
            </div>
        </div>
    </div>
</div>


@if (_showBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}


@code {


    private string _modalDisplay = "none;";
    private string _modalClass = "";
    private bool _showBackdrop = false;
    private Employee _employee;

    public void Open(Employee employee)
    {
        _employee = employee;
        _modalDisplay = "block;";
        _modalClass = "Show";
        _showBackdrop = true;
        StateHasChanged();
    }

    private void Close()
    {
        _modalDisplay = "none";
        _modalClass = "";
        _showBackdrop = false;
        StateHasChanged();
    }

}